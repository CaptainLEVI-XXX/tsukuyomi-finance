{
  "name": "defi-ai-agent",
  "version": "1.0.0",
  "description": "Professional DeFi Risk Management AI Agent",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    "clean": "rm -rf dist",
    "compile-contracts": "cd .. && forge build",
    "agent:dev": "npm run compile-contracts && npm run dev",
    "analyze": "ts-node scripts/analyze.ts"
  },
  "dependencies": {
    "@elizaos/core": "^0.1.0",
    "ethers": "^6.11.0",
    "axios": "^1.6.0",
    "dotenv": "^16.4.0",
    "node-cache": "^5.1.2",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "@types/node": "^20.11.0",
    "ts-node": "^10.9.0",
    "nodemon": "^3.0.0"
  }
}